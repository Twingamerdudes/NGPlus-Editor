<Window x:Class="NG__Editor.CutsceneEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NG__Editor"
        mc:Ignorable="d"
        Title="CutsceneEditor" Height="450" Width="800" ResizeMode="NoResize">
    <Grid>
        <Label Content="Cutscene Editor" Margin="290,10,220,0" VerticalAlignment="Top" FontSize="24" FontFamily="Arial Black"/>
        <ListBox x:Name="Cutscenes" Margin="43,105,489,50" SelectionChanged="Cutscenes_SelectionChanged"/>
        <ListBox x:Name="Steps" Margin="522,105,10,50" Visibility="Visible" SelectionChanged="Steps_SelectionChanged"/>

    </Grid>
</Window>
